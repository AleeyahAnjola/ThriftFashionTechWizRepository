<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".Start2Activity">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/rec1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="297dp"
      android:layout_height="43dp"
      android:fontFamily="@font/poppins_semibold"
      android:text="Thrift Fashion"
      android:textAlignment="center"
      android:textColor="#FAB300"
      android:textSize="38sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.037" />

  <Button
      android:layout_width="18.02dp"
      android:layout_height="20dp"
      android:background="@drawable/active"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.346"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.787"
      tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

  <Button
      android:layout_width="18.02dp"
      android:layout_height="20dp"
      android:background="@drawable/inactive1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.442"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.787"
      tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

  <Button

      android:layout_width="18.02dp"
      android:layout_height="20dp"
      android:background="@drawable/inactive2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.549"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.787"
      tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

  <ImageView
      android:layout_width="179dp"
      android:layout_height="51dp"
      android:src="@drawable/rec4"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/imageView2"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.889" />

  <Button
      android:layout_width="179dp"
      android:layout_height="51dp"
      android:background="@drawable/rec2"
      android:text="LOGIN"
      android:textAlignment="textStart"
      android:textColor="#FAB300"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.112"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.926" />

  <Button
      android:layout_width="184dp"
      android:layout_height="52dp"
      android:background="@drawable/rec3"
      android:text="REGISTER"
      android:textColor="#FAB300"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.903"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.926" />
</androidx.constraintlayout.widget.ConstraintLayout>